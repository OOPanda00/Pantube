{
  "name": "Pantube",
  "short_name": "Pantube",
  "description": "Video sharing platform with social features",
  "start_url": "/",
  "scope": "/",
  "display": "standalone",
  "orientation": "portrait",
  "theme_color": "#ff4757",
  "background_color": "#ffffff",
  "categories": ["entertainment", "social", "video"],
  "lang": "ar",
  "dir": "ltr",

  "icons": [
    { "src": "/assets/img/icon-72.png",  "sizes": "72x72",  "type": "image/png", "purpose": "any maskable" },
    { "src": "/assets/img/icon-96.png",  "sizes": "96x96",  "type": "image/png", "purpose": "any maskable" },
    { "src": "/assets/img/icon-128.png", "sizes": "128x128","type": "image/png", "purpose": "any maskable" },
    { "src": "/assets/img/icon-144.png", "sizes": "144x144","type": "image/png", "purpose": "any maskable" },
    { "src": "/assets/img/icon-152.png", "sizes": "152x152","type": "image/png", "purpose": "any maskable" },
    { "src": "/assets/img/icon-192.png", "sizes": "192x192","type": "image/png", "purpose": "any maskable" },
    { "src": "/assets/img/icon-384.png", "sizes": "384x384","type": "image/png", "purpose": "any maskable" },
    { "src": "/assets/img/icon-512.png", "sizes": "512x512","type": "image/png", "purpose": "any maskable" }
  ],

  "screenshots": [
    {
      "src": "/assets/img/screenshot-mobile.png",
      "sizes": "1080x1920",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "Pantube Mobile Home Screen"
    },
    {
      "src": "/assets/img/screenshot-desktop.png",
      "sizes": "1920x1080",
      "type": "image/png",
      "form_factor": "wide",
      "label": "Pantube Desktop Watch Screen"
    }
  ],

  "shortcuts": [
    {
      "name": "Upload Video",
      "short_name": "Upload",
      "description": "Upload a new video",
      "url": "/upload",
      "icons": [{ "src": "/assets/img/upload-icon.png", "sizes": "96x96" }]
    },
    {
      "name": "Messages",
      "short_name": "Messages",
      "description": "Check your messages",
      "url": "/messages",
      "icons": [{ "src": "/assets/img/message-icon.png", "sizes": "96x96" }]
    },
    {
      "name": "Notifications",
      "short_name": "Notifications",
      "description": "View notifications",
      "url": "/notifications",
      "icons": [{ "src": "/assets/img/notification-icon.png", "sizes": "96x96" }]
    }
  ],

  "protocol_handlers": [
    { "protocol": "web+pantube", "url": "/watch?id=%s" }
  ]
}
