/* =========================
CSS RESET & VARIABLES
========================= */
:root {
    --bg: #f8f9fa;
    --bg-secondary: #ffffff;
    --bg-tertiary: #f1f3f4;
    --text: #202124;
    --text-secondary: #5f6368;
    --border: #dadce0;
    --primary: #ff4757;
    --primary-gradient: linear-gradient(135deg, #ff4757, #ff3838);
    --accent: #3742fa;
    --success: #2ed573;
    --warning: #ffa502;
    --danger: #ff3838;
    --shadow: 0 4px 12px rgba(0, 0, 0, 0.08);
    --shadow-lg: 0 10px 30px rgba(0, 0, 0, 0.12);
    --radius: 12px;
    --radius-sm: 8px;
    --header-height: 64px;
    --sidebar-width: 260px;
    --transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

body.theme-dark {
    --bg: #0f0f0f;
    --bg-secondary: #1a1a1a;
    --bg-tertiary: #242424;
    --text: #f1f1f1;
    --text-secondary: #aaa;
    --border: #333;
    --primary: #ff6b81;
    --primary-gradient: linear-gradient(135deg, #ff6b81, #ff4757);
    --accent: #5f7afc;
    --shadow: 0 4px 12px rgba(0, 0, 0, 0.25);
    --shadow-lg: 0 10px 30px rgba(0, 0, 0, 0.35);
}

* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

html {
    scroll-behavior: smooth;
}

body {
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen',
        'Ubuntu', 'Cantarell', 'Fira Sans', 'Droid Sans', 'Helvetica Neue',
        sans-serif;
    background: var(--bg);
    color: var(--text);
    line-height: 1.6;
    min-height: 100vh;
    overflow-x: hidden;
}

a {
    color: inherit;
    text-decoration: none;
    transition: var(--transition);
}

button,
input,
textarea,
select {
    font-family: inherit;
    font-size: inherit;
    border: none;
    background: none;
    outline: none;
}

button {
    cursor: pointer;
}

img {
    max-width: 100%;
    height: auto;
    display: block;
}

/* =========================
LAYOUT CONTAINERS
========================= */
.layout {
    display: grid;
    grid-template-columns: var(--sidebar-width) 1fr;
    min-height: calc(100vh - var(--header-height));
    margin-top: var(--header-height);
}

@media (max-width: 1024px) {
    .layout {
        grid-template-columns: 1fr;
    }
}

.content {
    padding: 24px 32px;
    max-width: 1600px;
    margin: 0 auto;
    width: 100%;
}

@media (max-width: 768px) {
    .content {
        padding: 16px;
    }
}

/* =========================
HEADER - FIXED
========================= */
.header {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    height: var(--header-height);
    background: var(--bg-secondary);
    border-bottom: 1px solid var(--border);
    display: flex;
    align-items: center;
    padding: 0 24px;
    z-index: 1000;
    box-shadow: var(--shadow);
    gap: 20px;
}

.header-left {
    display: flex;
    align-items: center;
    gap: 16px;
    flex-shrink: 0;
}

.menu-btn {
    display: none;
    font-size: 24px;
    padding: 8px;
    border-radius: var(--radius-sm);
    transition: var(--transition);
}

.menu-btn:hover {
    background: var(--bg-tertiary);
}

.logo {
    height: 36px;
    width: auto;
    object-fit: contain;
}

.search-bar {
    flex: 1;
    max-width: 600px;
}

.search-bar form {
    position: relative;
}

.search-bar input {
    width: 100%;
    padding: 12px 20px 12px 48px;
    background: var(--bg-tertiary);
    border: 1px solid var(--border);
    border-radius: 24px;
    color: var(--text);
    font-size: 16px;
    transition: var(--transition);
}

.search-bar input:focus {
    border-color: var(--primary);
    box-shadow: 0 0 0 3px rgba(255, 71, 87, 0.1);
}

.search-bar input::placeholder {
    color: var(--text-secondary);
}

.search-bar::before {
    content: 'üîç';
    position: absolute;
    left: 16px;
    top: 50%;
    transform: translateY(-50%);
    color: var(--text-secondary);
    z-index: 1;
}

.header-right {
    display: flex;
    align-items: center;
    gap: 16px;
    flex-shrink: 0;
}

.github-link img {
    width: 24px;
    height: 24px;
    opacity: 0.7;
    transition: var(--transition);
}

.github-link:hover img {
    opacity: 1;
    transform: scale(1.1);
}

/* =========================
NOTIFICATIONS DROPDOWN
========================= */
.notifications-wrapper {
    position: relative;
}

.notifications-btn {
    position: relative;
    width: 40px;
    height: 40px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 20px;
    background: var(--bg-tertiary);
    color: var(--text);
    transition: var(--transition);
}

.notifications-btn:hover {
    background: var(--primary);
    color: white;
    transform: translateY(-2px);
}

.notifications-badge {
    position: absolute;
    top: -2px;
    right: -2px;
    background: var(--danger);
    color: white;
    font-size: 11px;
    font-weight: bold;
    min-width: 18px;
    height: 18px;
    border-radius: 9px;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 0 4px;
    border: 2px solid var(--bg-secondary);
}

.notifications-dropdown {
    position: absolute;
    top: calc(100% + 10px);
    right: 0;
    width: 380px;
    max-height: 500px;
    background: var(--bg-secondary);
    border: 1px solid var(--border);
    border-radius: var(--radius);
    box-shadow: var(--shadow-lg);
    z-index: 1001;
    display: none;
    flex-direction: column;
    overflow: hidden;
}

.notifications-dropdown.show {
    display: flex;
    animation: slideDown 0.3s ease;
}

@keyframes slideDown {
    from {
        opacity: 0;
        transform: translateY(-10px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

.notifications-header {
    padding: 20px;
    border-bottom: 1px solid var(--border);
    display: flex;
    align-items: center;
    justify-content: space-between;
    background: var(--bg-tertiary);
}

.notifications-header h3 {
    font-size: 18px;
    font-weight: 600;
    color: var(--text);
}

.mark-all-read-btn {
    padding: 6px 12px;
    background: var(--primary);
    color: white;
    border-radius: var(--radius-sm);
    font-size: 14px;
    font-weight: 500;
    transition: var(--transition);
}

.mark-all-read-btn:hover {
    background: var(--danger);
    transform: translateY(-1px);
}

.notifications-list {
    flex: 1;
    overflow-y: auto;
    max-height: 400px;
}

.notification-item {
    padding: 16px 20px;
    border-bottom: 1px solid var(--border);
    display: flex;
    align-items: flex-start;
    gap: 12px;
    transition: var(--transition);
}

.notification-item.unread {
    background: linear-gradient(90deg, rgba(255, 71, 87, 0.05) 0%, transparent 100%);
}

.notification-item:hover {
    background: var(--bg-tertiary);
}

.notification-avatar {
    flex-shrink: 0;
    width: 40px;
    height: 40px;
    border-radius: 50%;
    overflow: hidden;
    background: var(--bg-tertiary);
    border: 2px solid var(--primary);
}

.notification-avatar img {
    width: 100%;
    height: 100%;
    object-fit: cover;
}

.default-avatar {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 18px;
    background: var(--bg-tertiary);
    color: var(--text-secondary);
}

.notification-content {
    flex: 1;
    min-width: 0;
}

.notification-message {
    font-size: 14px;
    line-height: 1.5;
    margin-bottom: 4px;
    color: var(--text);
    word-break: break-word;
}

.notification-meta {
    display: flex;
    gap: 12px;
    align-items: center;
    flex-wrap: wrap;
}

.notification-time {
    font-size: 12px;
    color: var(--text-secondary);
}

.video-link {
    font-size: 12px;
    color: var(--primary);
    font-weight: 500;
    padding: 2px 8px;
    background: rgba(255, 71, 87, 0.1);
    border-radius: 4px;
}

.video-link:hover {
    background: rgba(255, 71, 87, 0.2);
}

.friend-request-actions {
    display: flex;
    gap: 8px;
    margin-top: 10px;
}

.friend-action-btn {
    padding: 6px 16px;
    border-radius: var(--radius-sm);
    font-size: 13px;
    font-weight: 600;
    transition: var(--transition);
}

.accept-btn {
    background: var(--success);
    color: white;
}

.accept-btn:hover {
    background: #26c46a;
    transform: translateY(-1px);
}

.reject-btn {
    background: var(--danger);
    color: white;
}

.reject-btn:hover {
    background: #ff2020;
    transform: translateY(-1px);
}

.notification-actions {
    flex-shrink: 0;
}

.mark-read-btn {
    width: 32px;
    height: 32px;
    border-radius: 50%;
    background: var(--bg-tertiary);
    color: var(--text-secondary);
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 16px;
    transition: var(--transition);
}

.mark-read-btn:hover {
    background: var(--primary);
    color: white;
    transform: rotate(90deg);
}

.loading-notifications,
.no-notifications {
    padding: 40px 20px;
    text-align: center;
    color: var(--text-secondary);
    font-size: 14px;
}

.notifications-footer {
    padding: 16px 20px;
    border-top: 1px solid var(--border);
    text-align: center;
    background: var(--bg-tertiary);
}

.view-all-link {
    color: var(--primary);
    font-size: 14px;
    font-weight: 600;
    display: inline-flex;
    align-items: center;
    gap: 6px;
}

.view-all-link:hover {
    text-decoration: underline;
}

/* =========================
THEME TOGGLE & AVATAR
========================= */
.theme-btn {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 20px;
    background: var(--bg-tertiary);
    color: var(--text);
    transition: var(--transition);
}

.theme-btn:hover {
    background: var(--primary);
    color: white;
    transform: rotate(15deg);
}

.header-avatar-img {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    object-fit: cover;
    border: 3px solid transparent;
    transition: var(--transition);
}

.header-avatar-img:hover {
    border-color: var(--primary);
    transform: scale(1.05);
}

/* =========================
SIDEBAR - RESPONSIVE
========================= */
.sidebar {
    background: var(--bg-secondary);
    border-right: 1px solid var(--border);
    padding: 24px 0;
    height: calc(100vh - var(--header-height));
    position: sticky;
    top: var(--header-height);
    overflow-y: auto;
    transition: var(--transition);
}

@media (max-width: 1024px) {
    .sidebar {
        position: fixed;
        left: -100%;
        top: var(--header-height);
        width: var(--sidebar-width);
        z-index: 999;
        box-shadow: var(--shadow-lg);
        border-right: none;
    }

    .sidebar.open {
        left: 0;
    }

    .menu-btn {
        display: block;
    }
}

.sidebar-overlay {
    display: none;
    position: fixed;
    top: var(--header-height);
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.5);
    z-index: 998;
}

.sidebar-overlay.show {
    display: block;
}

.sidebar-user {
    padding: 0 24px 20px;
    border-bottom: 1px solid var(--border);
    margin-bottom: 20px;
    display: flex;
    align-items: center;
    gap: 12px;
}

.sidebar-avatar {
    width: 44px;
    height: 44px;
    border-radius: 50%;
    object-fit: cover;
    border: 3px solid var(--primary);
}

.sidebar-user span {
    font-weight: 600;
    font-size: 16px;
    color: var(--text);
}

.sidebar-menu {
    display: flex;
    flex-direction: column;
    gap: 4px;
    padding: 0 12px;
}

.sidebar-menu a {
    padding: 12px 16px;
    border-radius: var(--radius-sm);
    display: flex;
    align-items: center;
    gap: 12px;
    color: var(--text);
    font-size: 15px;
    font-weight: 500;
    transition: var(--transition);
}

.sidebar-menu a:hover {
    background: var(--bg-tertiary);
    color: var(--primary);
    transform: translateX(4px);
}

.sidebar-menu a.active {
    background: var(--primary-gradient);
    color: white;
}

/* =========================
PAGE TITLES
========================= */
.page-title {
    font-size: 32px;
    font-weight: 800;
    margin-bottom: 24px;
    color: var(--text);
    position: relative;
    padding-bottom: 12px;
}

.page-title::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 60px;
    height: 4px;
    background: var(--primary-gradient);
    border-radius: 2px;
}

/* =========================
VIDEO GRID - FIXED LAYOUT
========================= */
.video-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: 24px;
    width: 100%;
}

@media (max-width: 768px) {
    .video-grid {
        grid-template-columns: repeat(auto-fill, minmax(240px, 1fr));
        gap: 16px;
    }
}

.video-card {
    background: var(--bg-secondary);
    border-radius: var(--radius);
    overflow: hidden;
    box-shadow: var(--shadow);
    transition: var(--transition);
    display: flex;
    flex-direction: column;
    height: 100%;
    border: 1px solid var(--border);
}

.video-card:hover {
    transform: translateY(-6px);
    box-shadow: var(--shadow-lg);
    border-color: var(--primary);
}

.video-card .thumb {
    display: block;
    width: 100%;
    aspect-ratio: 16 / 9;
    overflow: hidden;
    background: var(--bg-tertiary);
    position: relative;
}

.video-card img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: var(--transition);
}

.video-card:hover img {
    transform: scale(1.05);
}

.thumb-inner {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 48px;
    color: var(--text-secondary);
}

.video-info {
    padding: 16px;
    flex: 1;
    display: flex;
    flex-direction: column;
}

.video-title {
    font-size: 16px;
    font-weight: 700;
    line-height: 1.4;
    margin-bottom: 8px;
    color: var(--text);
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    min-height: 44px;
}

.video-meta {
    font-size: 14px;
    color: var(--text-secondary);
    display: flex;
    gap: 8px;
    align-items: center;
    flex-wrap: wrap;
    margin-top: auto;
}

.channel-name {
    color: var(--text);
    font-weight: 600;
    transition: var(--transition);
}

.channel-name:hover {
    color: var(--primary);
}

.delete-btn {
    margin-top: 12px;
    padding: 8px 16px;
    background: rgba(255, 56, 56, 0.1);
    color: var(--danger);
    border-radius: var(--radius-sm);
    font-size: 14px;
    font-weight: 600;
    transition: var(--transition);
    align-self: flex-start;
    display: none;
}

.delete-btn:hover {
    background: var(--danger);
    color: white;
}

.video-card:hover .delete-btn {
    display: block;
}

/* =========================
WATCH PAGE - COMPLETE FIX
========================= */
.watch-page {
    width: 100%;
    overflow: visible;
}

.watch-layout {
    display: grid;
    grid-template-columns: 1fr 360px;
    gap: 32px;
    width: 100%;
    align-items: start;
}

@media (max-width: 1200px) {
    .watch-layout {
        grid-template-columns: 1fr;
        gap: 24px;
    }
}

.watch-main {
    display: flex;
    flex-direction: column;
    gap: 24px;
    min-width: 0;
    width: 100%;
}

.video-wrapper {
    background: #000;
    border-radius: var(--radius);
    overflow: hidden;
    position: relative;
    padding-top: 56.25%; /* 16:9 */
    height: 0;
    box-shadow: var(--shadow-lg);
    width: 100%;
}

.watch-video {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    outline: none;
    display: block;
    border-radius: var(--radius);
}

.video-missing {
    position: absolute;
    inset: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--bg-tertiary);
    color: var(--text);
    font-size: 18px;
    border-radius: var(--radius);
}

.watch-title {
    font-size: 24px;
    font-weight: 800;
    line-height: 1.4;
    color: var(--text);
    word-wrap: break-word;
}

.watch-meta {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 16px 0;
    border-bottom: 1px solid var(--border);
    flex-wrap: wrap;
    gap: 16px;
}

.views-count {
    font-size: 16px;
    color: var(--text-secondary);
    font-weight: 500;
    display: flex;
    align-items: center;
    gap: 6px;
}

.video-actions {
    display: flex;
    gap: 12px;
    flex-wrap: wrap;
}

.like-btn {
    padding: 10px 24px;
    border-radius: 24px;
    border: 2px solid var(--border);
    background: transparent;
    color: var(--text);
    font-weight: 600;
    font-size: 15px;
    display: flex;
    align-items: center;
    gap: 8px;
    transition: var(--transition);
}

.like-btn:hover {
    background: var(--bg-tertiary);
    transform: translateY(-2px);
}

.like-btn.active {
    background: var(--primary);
    color: white;
    border-color: var(--primary);
    box-shadow: 0 4px 12px rgba(255, 71, 87, 0.3);
}

.like-ratio {
    display: flex;
    align-items: center;
    gap: 16px;
    margin-top: 8px;
    width: 100%;
}

.like-ratio-bar {
    flex: 1;
    height: 6px;
    background: var(--border);
    border-radius: 3px;
    overflow: hidden;
}

.like-ratio-fill {
    height: 100%;
    background: var(--primary-gradient);
    border-radius: 3px;
    transition: width 0.5s ease;
}

.like-ratio-text {
    font-size: 14px;
    color: var(--text-secondary);
    min-width: 80px;
    font-weight: 500;
}

.watch-channel {
    padding: 12px 0;
    font-size: 18px;
    border-bottom: 1px solid var(--border);
}

.watch-channel a {
    color: var(--text);
    font-weight: 700;
    transition: var(--transition);
    display: flex;
    align-items: center;
    gap: 10px;
}

.watch-channel a:hover {
    color: var(--primary);
}

.video-description {
    background: var(--bg-secondary);
    padding: 24px;
    border-radius: var(--radius);
    line-height: 1.7;
    border-left: 4px solid var(--primary);
    box-shadow: var(--shadow);
}

.video-description h3 {
    margin-bottom: 12px;
    font-size: 18px;
    color: var(--primary);
    font-weight: 700;
}

.video-description pre {
    white-space: pre-wrap;
    font-family: inherit;
    font-size: 15px;
    color: var(--text);
}

/* =========================
COMMENTS SECTION - FIXED
========================= */
.comments-section {
    margin-top: 32px;
    padding-top: 32px;
    border-top: 2px solid var(--border);
    width: 100%;
}

.comments-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 24px;
    padding-bottom: 16px;
    border-bottom: 1px solid var(--border);
    flex-wrap: wrap;
    gap: 16px;
}

.comments-header h3 {
    font-size: 22px;
    font-weight: 800;
    color: var(--text);
    margin: 0;
    display: flex;
    align-items: center;
    gap: 12px;
}

#commentsCount {
    background: var(--primary);
    color: white;
    padding: 4px 12px;
    border-radius: 16px;
    font-size: 14px;
    font-weight: 700;
}

.toggle-comments-btn {
    background: var(--bg-tertiary);
    color: var(--text);
    padding: 10px 20px;
    border-radius: 24px;
    font-weight: 600;
    font-size: 14px;
    display: flex;
    align-items: center;
    gap: 8px;
    transition: var(--transition);
}

.toggle-comments-btn:hover {
    background: var(--primary);
    color: white;
    transform: translateY(-2px);
}

.comments-container {
    width: 100%;
}

.comment-form {
    margin-bottom: 32px;
    width: 100%;
}

.comment-form textarea {
    width: 100%;
    min-height: 100px;
    padding: 16px;
    border-radius: var(--radius);
    border: 2px solid var(--border);
    background: var(--bg-secondary);
    color: var(--text);
    resize: vertical;
    margin-bottom: 16px;
    font-size: 15px;
    line-height: 1.5;
    transition: var(--transition);
}

.comment-form textarea:focus {
    border-color: var(--primary);
    box-shadow: 0 0 0 3px rgba(255, 71, 87, 0.1);
}

.comment-form-actions {
    display: flex;
    gap: 12px;
    align-items: center;
}

.comment-form button {
    padding: 12px 28px;
    background: var(--primary-gradient);
    color: white;
    border-radius: 24px;
    font-weight: 700;
    font-size: 15px;
    transition: var(--transition);
}

.comment-form button:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(255, 71, 87, 0.3);
}

.comment-form button[type="button"] {
