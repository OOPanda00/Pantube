# APP
APP_ENV=development
APP_DEBUG=true
APP_NAME=Pantube
APP_URL=http://localhost:8000
APP_TIMEZONE=UTC
APP_LOCALE=en

# SECURITY
APP_KEY=base64:your_random_32_character_key_here_change_this
SESSION_DRIVER=file
SESSION_LIFETIME=120

# DATABASE
DB_HOST=localhost
DB_PORT=3306
DB_NAME=pandaa
DB_USERNAME=root
DB_PASSWORD=123456
DB_CHARSET=utf8mb4

# REDIS (Cache + Session)
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379
REDIS_CACHE_DB=1
REDIS_SESSION_DB=2

# CACHE
CACHE_DRIVER=redis
CACHE_PREFIX=pantube_

# CDN
CDN_ENABLED=true
CDN_URL=https://cdn.example.com
CDN_VIDEOS_PATH=/videos
CDN_IMAGES_PATH=/images
CDN_ASSETS_PATH=/assets

# UPLOAD
UPLOAD_MAX_SIZE=200MB
UPLOAD_VIDEO_TYPES=mp4,webm,mov,avi
UPLOAD_IMAGE_TYPES=jpg,jpeg,png,webp,gif

# 2FA
TWOFA_ENABLED=true
TWOFA_ISSUER=Pantube
TWOFA_DIGITS=6
TWOFA_PERIOD=30
TWOFA_WINDOW=1

# EMAIL (SMTP)
MAIL_DRIVER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=noreply@pantube.example.com
MAIL_PASSWORD=SMTP_PASSWORD
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@pantube.example.com
MAIL_FROM_NAME=Pantube

# MONITORING
SENTRY_DSN=https://YOUR_SENTRY_DSN_HERE@sentry.io/PROJECT_ID
LOG_CHANNEL=stack
LOG_LEVEL=error

# BACKUP
BACKUP_ENABLED=true
BACKUP_PATH=/var/backups/pantube
BACKUP_RETENTION_DAYS=7
BACKUP_COMPRESS=true

# VIDEO PROCESSING
VIDEO_QUEUE_ENABLED=true
VIDEO_QUEUE_CONNECTION=redis
VIDEO_FORMATS=mp4,webm
VIDEO_RESOLUTIONS=360,480,720,1080
VIDEO_BITRATES=500k,1000k,2500k,5000k
VIDEO_WATERMARK_ENABLED=false
VIDEO_WATERMARK_PATH=/path/to/watermark.png

# PWA
PWA_ENABLED=true
PWA_NAME=Pantube
PWA_SHORT_NAME=Pantube
PWA_THEME_COLOR=#ff4757
PWA_BACKGROUND_COLOR=#ffffff
